<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Launch Theme - Uygulama başlatılırken kullanılan tema -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Splash screen arka planı -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Tam ekran modu -->
        <!-- Status bar rengi (AppTheme.darkBackground) -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Navigation bar rengi (AppTheme.darkBackground) -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Sistem barlarının arka planını çizme -->
        <!-- Çentik/delik ekranlar için optimizasyon -->
        <!-- Ek özellikler -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <!-- Normal Theme - Uygulama çalışırken kullanılan tema -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Ana arka plan rengi -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Status ve navigation bar renkleri -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Sistem UI özellikleri -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
